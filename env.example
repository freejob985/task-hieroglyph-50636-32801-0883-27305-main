# Environment Configuration
NODE_ENV=development

# Custom Domain Configuration
VITE_CUSTOM_DOMAIN=your-custom-domain.com
VITE_APP_TITLE=Todo App
VITE_APP_DESCRIPTION=Advanced Todo Management Application
VITE_API_URL=https://api.your-custom-domain.com
VITE_CDN_URL=https://cdn.your-custom-domain.com

# SSL Configuration
VITE_SSL_ENABLED=true
VITE_SSL_CERT_PATH=./certs/certificate.crt
VITE_SSL_KEY_PATH=./certs/private.key

# Build Configuration
VITE_BUILD_MODE=production
VITE_SOURCE_MAP=false
VITE_MINIFY=true

# Port Configuration
VITE_PORT=8080

# Deployment Configuration
DEPLOYMENT_METHOD=local
LOCAL_DEPLOY_PATH=/var/www/html

# FTP Deployment (if using FTP)
FTP_HOST=your-ftp-host.com
FTP_USER=your-username
FTP_PASSWORD=your-password
FTP_REMOTE_PATH=/public_html

# SSH Deployment (if using SSH)
SSH_HOST=your-server.com
SSH_USER=root
SSH_PORT=22
SSH_REMOTE_PATH=/var/www/html

# Automatic Deployment
AUTO_BUILD=true
AUTO_DEPLOY=false
AUTO_LINT=true
DEPLOYMENT_INTERVAL=300000

# Notifications
NOTIFICATION_WEBHOOK=https://your-webhook-url.com/notify

# Development
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=8080
